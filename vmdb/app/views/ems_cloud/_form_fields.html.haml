- if @edit[:new][:emstype] == "ec2"
  %tr
    %td.key Amazon Region
    %td.wide
      = select_tag("hostname",
                   options_for_select([["<Choose>", nil]] + Array(@edit[:amazon_regions].invert).sort { |a, b| a[0] <=> b[0] },
                                      @edit[:new][:hostname]),
                   "data-miq_observe" => {:url => url}.to_json)
- elsif @edit[:new][:emstype].present?
  %tr
    %td.key Host name
    %td.wide
      = text_field_tag("hostname",
                       @edit[:new][:hostname],
                       :maxlength => MAX_HOSTNAME_LEN,
                       "data-miq_observe" => {:interval => ".5", :url => url}.to_json)
  %tr
    %td.key IP Address
    %td.wide
      = text_field_tag("ipaddress",
                       @edit[:new][:ipaddress],
                       :maxlength => 15,
                       "data-miq_observe" => {:interval => ".5", :url => url}.to_json)
