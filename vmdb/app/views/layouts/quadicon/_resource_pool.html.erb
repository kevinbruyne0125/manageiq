<% width = size == 150 ? 54 : 35 %>
<% height = width %>
<% img = item.vapp ? "vapp.png" : "resource_pool.png" %>

<div class="flobj"><img src="/images/icons/<%= size %>/base-single.png" border="0"/></div>
<div class="flobj e<%= size %>"><img src="/images/icons/new/<%= img %>" width="<%= width * 1.8 %>" height="<%= height * 1.8 %>" border="0"/></div>
<% if item.get_policies.length > 0 %>
	<div class="flobj g<%= size %>" ><img src="/images/icons/new/shield.png"/></div>
<% end %>
<% unless typ == :listnav %><%# Listnav, no clear image needed %>
	<div class="flobj">
		<% if ! @embedded || @showlinks %>
			<a href= "<%= url_for_record(item) %>" title="<%= h(item.name) %>">
				<img src="/images/clearpix.gif" width="<%= size %>" height="<%= size %>"/>
			</a>
		<% else %>
			<a title="<%= h(item.name) %>">
					<img src="/images/clearpix.gif" width="<%= size %>" height="<%= size %>"/>
			</a>
		<% end %>
	</div>
<% end %>

