%table#content{:width=>"100%", :border=>"0", :cellpadding=>"0", :cellspacing=>"0"}
  %tr
    - if layout_uses_listnav?
      %td#leftcol{:valign=>"top"}
        = render :partial => "layouts/listnav"
    %td#maincol{:valign=>"top"}

      - if layout_uses_breadcrumbs?
        = render :partial => "layouts/breadcrumbs"

      - if layout_uses_tabs?
        = render :partial => '/layouts/tabs'
      = yield
