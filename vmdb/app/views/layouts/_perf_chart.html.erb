<% width  ||= @perf_options[:index] ? 1000 : 350 %>
<% height ||= @perf_options[:index] ? 700  : 250 %>
<% if chart_data[chart_index][:xml2] %>
  <fieldset style="width: <%=width %>px; height: <%=height+20%>px; float:left;">
    <p class="legend"><%= charts[chart_index][:title] %></p>
    <table border="0" cellpadding="0" cellspacing="0"><tbody>
      <tr><td valign="bottom">
        <%= chart_no_url(
                      :id      => "miq_#{chart_set}_#{chart_index}",
                      :bgcolor => "#f2f2f2",
                      :width   => width,
                      :height  => height*70/100) %>
      </td></tr>
      <tr><td valign="top">
        <div style="margin-top:-4px">
        <%= chart_no_url(
                      :id      => "miq_#{chart_set}_#{chart_index}_2",
                      :bgcolor => "#f2f2f2",
                      :width   => width,
                      :height  => height*30/100) %>
        </div>
      </td></tr>
    </tbody></table>
  </fieldset>
<% else %>
  <hr>
    <p class="legend"><%= charts[chart_index][:title] %></p>
    <%= chart_no_url(
                  :id      => "miq_#{chart_set}_#{chart_index}",
                  :bgcolor => "#f2f2f2",
                  :width   => width,
                  :height  => height) %>
<% end %>
