<%= render :partial => "layouts/flash_msg" %>

<ul id="tab">
	<li class="active"><a class="active"><%= @title %></a>
	</li>
</ul>

<%= form_tag(:action => 'add_vm_to_service', :id => @vm) do %>
			<fieldset>
				<p class="legend">Service Selection</p>
				<table class="style1">
						<tr>
							<td class="key">Service</td>
							<td><%= select_tag('chosen_service', options_for_select(@svcs.sort), { :multiple=> false, :class=>"widthed","data-miq_focus"=>true } ) %></td>
						</tr>
				</table>
			</fieldset>

<div id="formbuttonplacement">


			<%= image_submit_tag("/images/formbuttons/add.png",  :width=>"80", :height=>"35", :name=>"add", :class=>"button", :alt=>"Add VM to the selected Service", :title=>"Add VM to the selected Service") %>
			<%= image_submit_tag("/images/formbuttons/cancel.png",  :width=>"80", :height=>"35", :name=>"cancel", :class=>"button", :alt=>"Cancel", :title=>"Cancel") %>
			<% end %>
</div>