  - if last_run_on
    = format_timezone(last_run_on, session[:user_tz], "widget_footer")
  - else
    Never
  &nbsp;&nbsp;|&nbsp;&nbsp; Next
  - next_run_on = widget.next_run_on
  - if next_run_on
    = format_timezone(next_run_on, session[:user_tz], "widget_footer")
  - else
    Unknown
