- url = url_for(:action => 'form_field_changed', :id => "#{@sm.id || "new"}")
- validate_url ||= ["new", "create"].include?(controller.action_name) ? "create" : "update"

#form_div
  = render :partial => "layouts/flash_msg"
  %p.legend Basic Information
  %table.style1
    %tr
      %td.key Name
      %td.wide
        = text_field_tag("name",
          @edit[:new][:name],
          :maxlength => MAX_NAME_LEN,
          "data-miq_focus" => true,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key Type
      %td.wide
        - if @sm.id
          = h(@edit[:new][:sm_type])
        - else
          = select_tag("sm_type",
            options_for_select([["<Choose>",nil]] + @edit[:sm_types].invert.sort, @edit[:new][:sm_type]),
            "data-miq_observe" => {:url => url}.to_json)
    %tr
      %td.key Host Name
      %td.wide
        = text_field_tag("hostname",
          @edit[:new][:hostname],
          :maxlength => MAX_NAME_LEN,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key IP Address
      %td.wide
        = text_field_tag("ipaddress",
          @edit[:new][:ipaddress],
          :maxlength => 15,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key Port
      %td.wide
        = text_field_tag("port",
          @edit[:new][:port],
          :maxlength => 15,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key Zone
      %td.wide
        - if @edit[:server_zones].length <= 1
          = text_field_tag("server_zone",
            @edit[:new][:zone],
            :disabled => true,
            :maxlength => 15,
            "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
        - else
          = select_tag("server_zone",
            options_for_select(@edit[:server_zones].sort, @edit[:new][:zone]),
            "data-miq_observe" => {:url => url}.to_json)

  %hr
  %p.legend Credentials
  %table.style1
    %tr
      %td.key User ID
      %td.wide
        = text_field_tag("userid",
          @edit[:new][:userid],
          :maxlength => 50,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key Password
      %td.wide
        = password_field_tag("password",
          @edit[:new][:password],
          :maxlength => 50,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td.key Verify Password
      %td.wide
        = password_field_tag("verify",
          @edit[:new][:verify],
          :maxlength => 50,
          "data-miq_observe" => {:interval => '.5', :url => url}.to_json)
    %tr
      %td
      %td{:align => 'left'}
        = render(:partial => "/layouts/form_buttons_verify",
          :locals => {:validate_url => validate_url, :record => @sm})

  - if ["new", "create"].include?(controller.action_name)
    %table{:width => '100%'}
      %tr
        %td{:align => 'right'}
          #buttons_on
            = button_tag('Add',
              :class => "btn btn-primary",
              :alt => "Add this Storage Manager",
              :title => "Add this Storage Manager",
              :onclick => "miqAjaxButton('#{url_for(:action => "create", :id => "new", :button => "add")}');")
            = button_tag('Cancel',
              :class => "btn btn-default",
              :alt => "Cancel",
              :title => "Cancel",
              :onclick => "miqAjaxButton('#{url_for(:action => "create", :id => "new", :button => "cancel")}');")
  - else
    = render(:partial => '/layouts/edit_form_buttons',:locals => {:record_id => @sm.id, :ajax_buttons => true})
