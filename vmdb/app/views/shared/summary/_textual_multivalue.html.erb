<table cellpadding="0" cellspacing="0">
  <% items.each do |item| %>
    <tr<% if item[:title] %> class="no-hover" title="<%= item[:title] && item[:link] %>"<% end %><% if item[:link] %> onclick="DoNav('<%= item[:link] %>');"<% end %>>
      <td style="border:0px; margin: 0px; padding:2px 0px 2px 0px">
      	<% if item[:image] %>
      		<img src="/images/icons/new/<%= item[:image] %>.png" />
      	<% end %><%= item[:value] %>
      </td>
    </tr>
  <% end %>
</table>
