<% url = url_for(:action=>'create_ld_field_changed', :id=>@sb[:ccs_id]) %>
<div id="form_div">
	<%= render :partial => "layouts/flash_msg" %>

		<p class="legend">Options</p>
		<table class="admintable">
			<tr>
				<td class="key">Name</td>
				<td>
          <%= text_field_tag("ld_name",
                             @edit[:new][:ld_name],
                             :maxlength         => MAX_NAME_LEN,
													   "data-miq_focus"   => true,
                             "data-miq_observe" => {:interval =>'.5', 
                             :url               => url}.to_json) 
          %>
				</td>
			</tr>
			<tr>
				<td class="key">Aggregate (free space)</td>
				<td>
          <%= select_tag("aggregate_name",
                         options_for_select([["<Choose>",nil]] + @edit[:aggregates].invert.sort,
                         @edit[:new][:aggregate_name]),
                         "data-miq_sparkle_on"  => true, 
                         "data-miq_sparkle_off" => true,
                         "data-miq_observe"     => {:url => url}.to_json) 
          %>
				</td>
			</tr>
			<tr>
				<td class="key">Size (GB)</td>
				<td>
          <%= text_field_tag("ld_size",
                             @edit[:new][:ld_size],
                             :maxlength         => MAX_NAME_LEN,
                             "data-miq_observe" => {:interval => '.5', 
                             	                      :url      => url}.to_json) 
          %>
				</td>
			</tr>
		</table>

	<div id="buttons_div">
		<table width="100%">
			<tr>
				<td align="right">
					<div>


								<%= button_tag('Submit', 
								               :class   => "btn btn-primary",
														   :alt     => "Submit this Create Logical Disk request",
														   :title   => "Submit this Create Logical Disk request",
														   :onclick => "miqAjaxButton('#{url_for(:action => 'create_ld',
																																     :id     => @sb[:ccs_id],
																																     :button => "submit")}');")
								%>


								<%= button_tag('Cancel',
									             :class   => "btn btn-default",
												       :alt     => "Cancel", 
												       :title   => "Cancel",
												       :onclick => "miqAjaxButton('#{url_for(:action => "create_ld",
												                                             :id     => @sb[:ccs_id],
												                                             :button => "cancel")}');")
								%>


					</div>
				</td>
			</tr>
		</table>
	</div>
</div>
