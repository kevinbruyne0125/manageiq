#profile_folders_div{:style => "width: 100%; height: 100%; overflow: auto;"}
  - if @folders
    = render :partial => "layouts/flash_msg"
    %table.table.table-striped.table-bordered.table-hover
      %tbody
        - @folders.each do |f|
          - t = %w(Compliance Control).include?(f) ? "#{PROROOT}-f_#{f}" : "#{PROROOT}-f_#{f.split[1]}-f_#{f.split.first}"
          %tr{:onmouseover => "this.style.cursor = 'pointer'", :title => _("Open Folder"),
            :onclick => "profile_tree.selectItem('%s', true);" % t }
            %td.narrow
              %img{:src => "/images/icons/new/#{f.split.first.downcase}.png"}
            %td
              = _("%s Policy Profiles") % h(f)
