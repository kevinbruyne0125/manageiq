#alert_profile_folders_div{:style => "width: 100%; height: 100%; overflow: auto;"}
  - if @ap_folders
    = render :partial => "layouts/flash_msg"
    %table.style3
      %thead
        %th.icon
        %th
      %tbody
        - @ap_folders.each do |f|
          %tr{:class => cycle('row0', 'row1'), :onclick => "cfmeDynatree_activateNode('alert_profile_tree', 'xx-#{f.last}');",
            :onmouseover => "this.style.cursor = 'pointer'", :title => _("Open Folder")}
            %td{:nowrap => 1}
              %img{:src => "/images/icons/new/#{f.last.underscore.downcase}.png", :valign => "middle", :border => "0"}
            %td
              = f.first
              &nbsp;
              = _('Alert Profiles')
