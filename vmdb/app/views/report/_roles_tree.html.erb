<%# Div to hold the actual tree %>
<div id="roles_tree_div" style="width:100%;height:100%;">
  <div id="roles_treebox" style="width:100%;height:100%;color:#000; overflow: hidden"></div>
                  <%= render(:partial       => 'layouts/dynatree',
                    :locals=>{:tree_id      => 'roles_treebox',
                              :tree_name    => 'roles_tree',
                              :json_tree    => @temp[:roles_tree],
                              :id_prefix    => 'roles_',
                              :onclick      => 'cfmeOnClick_SelectTreeNode',
                              :select_node  => "#{x_node}",
                              :base_id      => 'root',
                              :no_base_exp  => true,
                              :exp_tree     => false,
                              :highlighting => true,
                              :tree_state   => true,
                              :multi_lines  => true
                              }) %>
</div>
