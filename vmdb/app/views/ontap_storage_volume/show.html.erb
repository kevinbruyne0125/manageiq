<% if @showtype == "item" %>
  <% kls = @item.class.to_s == "SniaLocalFileSystem" ? "snia_local_file_system" : "cim_base_storage_extent" %>
  <%= render(:partial=>"layouts/#{@showtype}") %>
<% elsif @display == "main" %>
  <%= render(:partial=>@showtype) %>
<% elsif @display == "show_statistics" %>
  <%= render(:partial=>"layouts/show_statistics") %>
<% elsif @showtype == "download_pdf" %>
  <%= render(:partial => "layouts/show_pdf") %>
<% elsif @showtype == "compare" %>
  <%= render(:partial=>"layouts/#{@showtype}") %>
<% else %>
  <%= render(:partial => "layouts/gtl", :locals=>{:action_url=>"show/#{@record.id.to_s}"}) %>
<% end %>
