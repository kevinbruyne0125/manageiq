	<%= render :partial => "layouts/flash_msg" %>
    <div id="column_lists">
    <table class="style1">
		<tr>
		  <td>
		    <table width="50%" class="form" id="formtest">
		      <tr>
				<td align="left" class="widthed">User Group Sequencing for LDAP Look Up:</td>
				<td></td>
			  </tr>
		      		<tr>
						<td align="left" valign="top">
							 <%= select_tag('seq_fields[]', options_for_select( @edit[:new][:ldap_groups_list], @selected), { :multiple=> true, :style=>"width: 450px", :size=>20, :id=>"seq_fields" } ) %>
						</td>
						<td width="30" align="left" valign="middle">
							<% if @edit[:new][:ldap_groups].length < 2 %>
								<%= image_tag("/images/toolbars/up.png", :class=>"dimmed small") %>
							<% else %>
								<%= link_to(image_tag("/images/toolbars/up.png", :class=>"rollover small", :alt=>"Move selected fields up"),
															{:action=>'rbac_group_field_changed', :button=>'up', :id=>"seq"},
															"data-submit"=>"column_lists",
															:remote=>true,
															:title=>'Move selected fields up')
								%>
							<% end %>

							<% if @edit[:new][:ldap_groups].length < 2 %>
								<%= image_tag("/images/toolbars/down.png", :class=>"dimmed small") %>
							<% else %>
								<%= link_to(image_tag("/images/toolbars/down.png", :class=>"rollover small", :alt=>"Move selected fields down"),
																		{:action=>'rbac_group_field_changed', :button=>'down', :id=>"seq"},
																		"data-submit"=>"column_lists",
																		:remote=>true,
																		:title=>'Move selected fields down')
								%>
							<% end %>
						</td>
		      	</tr>
						<div class="note">* Select one or more consecutive groups to move up or down.</div>
			    </table>
			  </td>
			</tr>
    </table>
</div>
