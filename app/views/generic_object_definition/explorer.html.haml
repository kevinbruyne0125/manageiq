#generic-object-div{"ng-controller" => "genericObjectDefinitionFormController"}
  #main_div.generic-object-main-div{"ng-hide" => "showAddForm"}
    .all-items{"ng-hide" => "showSingleItem"}
      %h4 Generic Object Definitions

      %table.table.table-striped.table-bordered.table-hover.table-clickable.table-checkable
        %thead
          %tr
            %th Name
            %th Description
        %tbody
          %tr{"ng-repeat" => "definition in genericObjectList", "ng-click" => "listObjectClicked(definition.name)"}
            %td {{ definition.name }}
            %td {{ definition.description }}

    .single-item{"ng-show" => "showSingleItem"}
      .row
        .col-md-2
          %p
            Name
        .col-md-8
          %p.generic-object-definition-name
            {{ genericObjectDefinitionModel.name }}

      .row
        .col-md-2
          %p
            Description
        .col-md-8
          %p.generic-object-definition-description
            {{ genericObjectDefinitionModel.description }}

  %form#generic-object-form{"name"          => "angularForm",
                            "ng-show"       => "showAddForm"}
    .row
      .col-md-2
        %p
          Name
      .col-md-8
        %input.generic-object-definition-name{"ng-model" => "genericObjectDefinitionModel.name"}

    .row
      .col-md-2
        %p
          Description
      .col-md-8
        %input.generic-object-definition-description{"ng-model" => "genericObjectDefinitionModel.description"}

    = render :partial => 'layouts/angular/x_edit_buttons_angular'

:javascript
  miq_bootstrap('#generic-object-div');
