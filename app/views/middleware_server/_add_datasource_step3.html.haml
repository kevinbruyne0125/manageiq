.mw_ds_add_step3{"ng-show" => "dsModel.step == 'STEP3'"}
  %h3
    = _("Step 3/3: Connection Settings")

  %ng-form.form-horizontal#form_step3{"name" => "step3Form"}
    .form-group
      %label.col-md-4.control-label{:for => "connection_url_input"}
        = _("Connection URL")
      .col-md-8
        %input.form-control#connection_url_input{:type            => "textarea",
                                                 "ng-required"    => "true",
                                                 "ng-minlength" => "10",
                                                 "ng-model"       => "step3DsModel.connectionUrl"}
    .form-group
      %label.col-md-4.control-label{:for => "user_name_input"}
        = _("User Name")
      .col-md-8
        %input.form-control#user_name_input{:type          => "text",
                                            "ng-required"  => "true",
                                            "ng-minlength" => "10",
                                            "placeholder"  => _("Enter JDBC Module name"),
                                            "ng-model"     => "step3DsModel.userName"}

    .form-group
      %label.col-md-4.control-label{:for => "jdbc_driver_class_input"}
        = _("Password")
      .col-md-8
        %input.form-control#password_input{:type          => "password",
                                           "ng-required"  => "true",
                                           "ng-minlength" => "5",
                                           "placeholder"  => _("Enter Password"),
                                           "ng-model"     => "step3dsModel.password"}

    .form-group
      %label.col-md-4.control-label{:for => "security_domain_input"}
        = _("Security Domain")
      .col-md-8
        %input.form-control#security_domain_input{:type          => "text",
                                                  "ng-minlength" => "3",
                                                  "placeholder"  => _("Enter Security Domain"),
                                                  "ng-model"     => "step3DsModel.securityDomain"}

    .form-group
      %label.col-md-4.control-label{:for => "minor_version_input"}
      .col-md-8
        %button.btn.btn-default{"ng-disabled" => "step3Form.$invalid",
                                "ng-click"    => "addDataSourceTestConnection()",
                                :type         => "button"}
          = _("Test Connection")

    .modal-footer
      %button.btn.btn-default{:type          => "button",
                              "ng-click"     =>"reset()",
                              "data-dismiss" => "modal"}
        = _("Cancel")
      %button.btn.btn-default{:type          => "button",
                              "ng-click"     =>"finishAddDatasourceBack()"}
        = _("Back")
      %button.btn.btn-primary{"ng-click"    => "finishAddDatasource()",
                              "ng-disabled" => "step3Form.$invalid",
                              :type         => "button"}
        = _("Done")
