- @angular_form = true

%form.form-horizontal#form_ds_add{"name"          => "angularForm",
                                  "ng-controller" => "middlewareAddDataSourceController"}
  .modal.fade#modal_ds_div{"tabindex"        => "-1",
                          "role"            => "dialog",
                          "aria-labelledby" => "mw_modal_label",
                          "aria-describedby" => "modal",
                          "aria-hidden"     => "true",
                          "data-keyboard"   => "false",
                          "data-backdrop"   => "static",
                          :style            => "display: none"}
    .modal-dialog.modal-md
      .modal-content#ds_add_div
        .modal-header
          %button.close{"data-dismiss" => "modal"}
            %span{"aria-hidden" => "true"}
              &times;
            %span.sr-only
              Close
          %h4.modal-title#mw_ds_modal_label
            = _("Add Datasource")
        .modal-body
          %input#ds_server_id{:type => "hidden", :value => params[:id]}
          .form-group
            %label.col-md-4.control-label{:for => "enable_deployment_cb"}
              = _("Select the datasource to add")
            .col-md-8
              = file_field("upload-ds", "file",
                           :class             => "lifestyle",
                           "data-buttonName"  => "btn-default",
                           "ng-model"         => "filePath",
                           "require-file"     => "handle")
          .form-group
            %label.col-md-4.control-label{:for => "runtime_name_input"}
              = _("Runtime Name")
            .col-md-8
              %input.form-control#runtime_ds_name_input{:type         => "text",
                                                     "placeholder" => _("No file chosen"),
                                                     "ng-model"    => "runtimeName",
                                                     "ng-disabled" => "!filePath"}
          :javascript
            $(":file").filestyle({icon: false, placeholder: _("No file chosen")});
        .modal-footer
          %button.btn.btn-default{:type => "button", "data-dismiss" => "modal"}
            = _("Cancel")
          %button.btn.btn-primary{"ng-disabled" => "!filePath",
                                  "ng-click"    => "addDataSource()",
                                  :type         => "button"}
            = _("Add Datasource")

:javascript
  miq_bootstrap('#form_ds_add');
